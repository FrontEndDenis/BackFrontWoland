footer.footer
	.container-xxl
		//- .row
			.col-3
			.col-4
		.footer__top
			.footer__left
				.footer__wrap-left
					a.footer__logo.logo(href='/')
						.logo__img
							img(src='#{static_url}images/general/logo-min.svg', alt='Велунд сталь')
						.logo__text
							img(src='#{static_url}images/general/logo-text.svg', alt='Велунд сталь')
					.footer__social
						a.footer__social-link.btn.btn--circle.btn--trparent(href='#', target='_blank')
							+icon('inst')
						a.footer__social-link.btn.btn--circle.btn--trparent(href='#', target='_blank')
							+icon('fb')
						a.footer__social-link.btn.btn--circle.btn--trparent(href='#', target='_blank')
							+icon('vk')
						a.footer__social-link.btn.btn--circle.btn--trparent(href='#', target='_blank')
							+icon('youtube')
						a.footer__social-link.btn.btn--circle.btn--trparent(href='#', target='_blank')
							+icon('ok')
				nav.footer__nav
					ul.footer__nav-list.txt--mdm14
							li
								a(href='/catalog') Каталог
							li
								a(href='/spec') Акции
							li
								a(href='/proizvodstvo') Производство
							li
								a(href='/uslugi') Услуги
							li
								a(href='/dostavka-i-oplata') Доставка
							li
								a(href='/o-kompanii') О нас
							li
								a(href='/articles') Блог
							li
								a(href='/news') Новости
							li
								a(href='/vakansii') Вакансии
							li
								a(href='/contacts') Контакты
			.footer__right
				.footer__contacts
					.footer__col
						a.txt--mdm16(href='tel:+#{current_filial.phone}')=current_filial.phone
						a.txt--mdm14(href='tel:+#{current_filial.phone_dop}')=current_filial.phone_dop
					.footer__col
						a.txt--mdm16(href='mailto:#{current_filial.email}')=current_filial.email
						.footer__timetable.txt--mdm14=current_filial.rezhim
				.footer__address
					.footer__address-title.txt--mdm16=current_filial.name
					.footer__address-location.txt--mdm14=current_filial.address
		.footer__bottom.txt--mdm12
			.footer__group © Группа компаний «Велунд сталь» 2020
			a.footer__policy(href='#', target='_blank') Политика конфиденциальности
