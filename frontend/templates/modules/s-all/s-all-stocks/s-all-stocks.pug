include ../../cards/stocks-card/stocks-card

section.s-all-stocks
    .container-xxl
        .s-all-stocks__header
            h2.s-all-stocks__title.txt--bld40
                +icon('star')
                | Акции
            a.link(href='#')
                span Все акции
                +icon('arrow-right-2')
        .s-all-stocks__slider
            .stocks-slider.swiper-container
                .swiper-wrapper
                    .swiper-slide
                        .stocks-slider__item
                            +stocksCard('basket-card', 'Стальной плоский фланец приварной встык с соединительным выступом', false, true)
                    .swiper-slide
                        .stocks-slider__item
                            +stocksCard('basket-card', 'Стальной плоский фланец приварной встык с соединительным выступом', true, true, 'special')
                    .swiper-slide
                        .stocks-slider__item
                            +stocksCard('basket-card', 'Короткое название', true, false, 'special')
                    .swiper-slide
                        .stocks-slider__item
                            +stocksCard('basket-card', 'Стальной плоский фланец', true, false, 'special')
                    .swiper-slide
                        .stocks-slider__item
                            +stocksCard('basket-card', 'Стальной плоский фланец приварной встык', true, false, 'special')
                    .swiper-slide
                        .stocks-slider__item
                            +stocksCard('basket-card', 'Стальной плоский фланец приварной встык', true, true, 'special')
            button.stocks-slider__prev.swiper-prev
                +icon('arrow-right-2')
            button.stocks-slider__next.swiper-next
                +icon('arrow-right-2')