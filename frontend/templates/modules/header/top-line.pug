.top-line
	.top-line__left
		a.top-line__logo.logo(href='index.html')
			.logo__img
				img(src='../../../static/images/general/logo-min.svg', alt='Велунд сталь')
			.logo__text
				img(src='../../../static/images/general/logo-text.svg', alt='Велунд сталь')
		nav.top-line__nav
			ul.top-line__navitagion-panel.txt--mdm14
				li
					a(href='#') Производство
				li
					a(href='#') Услуги
				li
					a(href='#') Доставка
				li.catalog-list
					a(href='#')
						| Компания
						+icon('arrow-down')
					.catalog-list__wrap
						ul.catalog-list__list
							li
								a(href='#')
									| О нас
									+icon('arrow-right')
							li
								a(href='#')
									| Блог
									+icon('arrow-right')
							li
								a(href='#')
									| Новости
									+icon('arrow-right')
							li
								a(href='#')
									| Вакансии
									+icon('arrow-right')
				li
					a(href='#') Контакты
	.top-line__right
		.top-line__contacts
			.top-line__info
				.top-line__col
					a.txt--mdm16(href='mailto:petropavlovsk@gkws.kz') petropavlovsk@gkws.kz
					#open-city.top-line__city.txt--mdm14
						span Нижний Новгород
				.top-line__col
					a.txt--mdm16(href='tel:+73439999999') 8 (343) 999 99 99
					a.txt--mdm14(href='tel:+78009999999') 8 (800) 999 99 99
			button#open-callback.top-line__callback.btn.btn--circle.btn--white5(type='button')
				+icon('phone')
		.top-line__mobile
			button#open-search.top-line__m-search.btn.btn--circle.btn--trparent(type='button')
				+icon('search')
				+icon('close')
			button#open-basket.top-line__m-basket.btn.btn--circle.btn--trparent(type='button')
				+icon('basket')
				+icon('close')
			button#mobile-menu.top-line__m-menu.btn.btn--circle.btn--trparent(type='button')
				+icon('hamburger')
				+icon('close')
				