	.top-line__right
		.top-line__contacts
			.top-line__info
				.top-line__col
					a.txt--mdm16(href='mailto:#{current_filial.email}')=current_filial.email
					#open-city.top-line__city.txt--mdm14
						span=current_filial.name
				.top-line__col
					a.txt--mdm16(href='tel:+#{current_filial.phone}')=current_filial.phone
					a.txt--mdm14(href='tel:+#{current_filial.phone}')=current_filial.phone
			button#open-callback.top-line__callback.btn.btn--circle.btn--white5(type='button')
				+icon('phone')
