.top-line
	.top-line__left
		a.top-line__logo.logo(href='/')
			.logo__img
				img(src='#{static_url}images/general/logo-min.svg', alt='Велунд сталь')
			.logo__text
				img(src='#{static_url}images/general/logo-text.svg', alt='Велунд сталь')
		nav.top-line__nav
			ul.top-line__navitagion-panel.txt--mdm14
				li
					a(href='/proizvodstvo') Производство
				li
					a(href='/uslugi') Услуги
				li
					a(href='/dostavka-i-oplata') Доставка
				li.catalog-list
					a(href='/informaciya')
						| Компания
						+icon('arrow-down')
					.catalog-list__wrap
						ul.catalog-list__list
							li
								a(href='/o-kompanii')
									| О нас
									+icon('arrow-right')
							li
								a(href='/articles')
									| Блог
									+icon('arrow-right')
							li
								a(href='/news')
									| Новости
									+icon('arrow-right')
							li
								a(href='/vakansii')
									| Вакансии
									+icon('arrow-right')
				li
					a(href='/contacts') Контакты
	.top-line__right
		.top-line__contacts
			.top-line__info
				.top-line__col
					a.txt--mdm16(href='mailto:#{current_filial.email}')=current_filial.email
					#open-city.top-line__city.txt--mdm14
						span=current_filial.name
				.top-line__col
					a.txt--mdm16(href='tel:#{current_filial.phone}')=current_filial.phone
					a.txt--mdm14(href='tel:#{current_filial.phone_dop}')=current_filial.phone_dop
			button#open-callback.top-line__callback.btn.btn--circle.btn--white5(type='button')
				+icon('phone')
		.top-line__mobile
			button#open-search.top-line__m-search.btn.btn--circle.btn--trparent(type='button')
				+icon('search')
				+icon('close')
			button#open-basket.top-line__m-basket.btn.btn--circle.btn--trparent(type='button')
				+icon('basket')
				+icon('close')
			button#mobile-menu.top-line__m-menu.btn.btn--circle.btn--trparent(type='button')
				+icon('hamburger')
				+icon('close')
