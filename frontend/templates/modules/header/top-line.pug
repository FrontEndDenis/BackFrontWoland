.top-line
	.top-line__left
		a.top-line__logo.logo(href='/')
			.logo__img
				img(src='#{static_url}images/general/logo-min.svg', alt='Велунд сталь')
			.logo__text
				img(src='#{static_url}images/general/logo-text.svg', alt='Велунд сталь')
		nav.top-line__nav
			ul.top-line__navitagion-panel.txt--mdm14
				each item in main_menu_list
					if not item.is_hidden_child and item.get_child
						li.catalog-list
							a(href=item.url)=item.name
								+icon('arrow-down')
							.catalog-list__wrap
								ul.catalog-list__list
									each sub_item in item.get_child
										li
											a(href=sub_item.url)=sub_item.name
												+icon('arrow-right')
					else
						li
							a(href=item.url)=item.name
					
