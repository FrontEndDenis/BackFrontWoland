.catalog-menu
	.catalog-menu__wrap
		.catalog-menu__submenu-level.catalog-menu__left(data-level='1')
			a.catalog-menu__title(href='/catalog', data-level='2') Каталог
			ul.catalog-menu__list.catalog-menu__items
				each category in catalog_menu_list
					each category_2 in category.get_child
						li(data-category-id=category_2.id, data-level='2')
							if category_2.get_child
								a(href=category_2.url)
									| #{category_2.name}
									+icon('arrow-right')
							else
								a(href=category_2.url)=category_2.name
		each category in catalog_menu_list
			.catalog-menu__submenu-level(data-level='2')
				each category_2 in category.get_child
					if category_2.get_child
						.catalog-menu__submenu(data-category-id=category_2.id)
							a.catalog-menu__title(href=category_2.url, data-level='3')=category_2.name
							ul.catalog-menu__list-submenu.catalog-menu__items
								each category_3 in category_2.get_child
									li(data-category-id=category_3.id, data-level='3')
										if category_3.get_child
											a(href=category_3.url)
												| #{category_3.name}
												+icon('arrow-right')
										else
											a(href=category_3.url)=category_3.name
			.catalog-menu__submenu-level(data-level='3')
				each category_2 in category.get_child
					each category_3 in category_2.get_child
						if category_3.get_child
							.catalog-menu__submenu(data-category-id=category_3.id)
								a.catalog-menu__title(href=category_3.url, data-level='4')=category_3.name
								ul.catalog-menu__list-submenu.catalog-menu__items
									each category_4 in category_3.get_child
										li(data-category-id=category_4.id, data-level='4')
											if category_4.get_child
												a(href=category_4.url)
													| #{category_4.name}
													+icon('arrow-right')
											else
												a(href=category_4.url)=category_4.name
			.catalog-menu__submenu-level(data-level='4')
				each category_2 in category.get_child
					each category_3 in category_2.get_child
						each category_4 in category_3.get_child
							if category_4.get_child
								.catalog-menu__submenu(data-category-id=category_4.id)
									a.catalog-menu__title(href=category_4.url)=category_4.name
									ul.catalog-menu__list-submenu.catalog-menu__items
										each category_5 in category_4.get_child
											li
												if category_5.get_child
													a(href=category_5.url)
														| #{category_5.name}
														+icon('arrow-right')
												else
													a(href=category_5.url)=category_5.name