.basket-card-manufacturing.basket-card-modal
	.basket-card-manufacturing__left
		.basket-card-manufacturing__img
			img(src='#{media_url}#{item.product.image}', alt=item.product.name)
	.basket-card-manufacturing__right
		.basket-card-manufacturing__info
			.basket-card-manufacturing__subtitle Услуга
			a.basket-card-manufacturing__text(href='#{item.product.get_absolute_url}')=item.product.name
		.basket-card-manufacturing__wrap
			if item.product.price
				.basket-card-manufacturing__info
					.basket-card-manufacturing__subtitle Цена
					.basket-card-manufacturing__text=item.product.price
			else
				.basket-card-manufacturing__info
					.basket-card-manufacturing__subtitle Цена
					.basket-card-manufacturing__text.hint
						| Договорная
						+icon('hint')
			button.basket-card-manufacturing__remove.remove-basket-card(type='button')
				+icon('remove')