	if product.is_spec == true
		.stocks-card__wrap-img
			.stocks-card__img
				img(src="#{product.image}", alt="#{product.name}")
			.stocks-card__icon
				img(src='../../../../static/images/general/special.svg', alt='Спецпредложение')
	else
		.stocks-card__wrap-img
			.stocks-card__img
				img(src="#{product.image}", alt="#{product.name}")
	a.stocks-card__title(href='#')=product.name
	.stocks-card__specifications
		if current_menu.label_param1 and product.param_1
			.stocks-card__item
				.stocks-card__property=current_menu.label_param1
				.stocks-card__value=product.param_1
		if current_menu.label_param2 and product.param_2
			.stocks-card__item
				.stocks-card__property=current_menu.label_param2
				.stocks-card__value=product.param_2
		if current_menu.label_param3 and product.param_3
			.stocks-card__item
				.stocks-card__property=current_menu.label_param3
				.stocks-card__value=product.param_3
		.stocks-card__wrap-item
			.stocks-card__item
				.stocks-card__property Цена
				if product.price != null
					.stocks-card__value.price #{product.price} ₽/шт
				else
					.stocks-card__value.price.hint
						| Договорная
						+icon('hint')
			.stocks-card__item
				button.stocks-card__add-basket.btn.btn--circle(type='button')
					.stocks-card__add-basket-txt В корзину
					+icon('add-basket')