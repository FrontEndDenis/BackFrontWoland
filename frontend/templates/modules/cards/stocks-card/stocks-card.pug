.stocks-card
	if current_menu.label_param3 and product.param_3
		.stocks-card__warning.warning
			+icon('warning')
			.warning__wrap
				.warning__list
					.warning__close
						+icon('close')
					if current_menu.label_param1 and product.param_1
						.warning__item
							.warning__property=current_menu.label_param1
							.warning__value=product.param_1
					if current_menu.label_param2 and product.param_2
						.warning__item
							.warning__property=current_menu.label_param2
							.warning__value=product.param_2
					if current_menu.label_param3 and product.param_3
						.warning__item
							.warning__property=current_menu.label_param3
							.warning__value=product.param_3
					if current_menu.label_param4 and product.param_4
						.warning__item
							.warning__property=current_menu.label_param4
							.warning__value=product.param_4
					if current_menu.label_param5 and product.param_5
						.warning__item
							.warning__property=current_menu.label_param5
							.warning__value=product.param_5
					if current_menu.label_param6 and product.param_6
						.warning__item
							.warning__property=current_menu.label_param6
							.warning__value=product.param_6
	if product.is_spec
		.stocks-card__wrap-img
			.stocks-card__img
				img(src="#{media_url}#{product.image}", alt="#{product.name}")
			.stocks-card__icon
				img(src='#{static_url}images/general/special.svg', alt='#{product.name}')
	else
		.stocks-card__wrap-img
			.stocks-card__img
				img(src="#{media_url}#{product.image}", alt="#{product.name}")
	a.stocks-card__title(href=product.url)=product.name
	.stocks-card__specifications
		if product.marka and not current_menu.is_hide_marka
			.stocks-card__item
				.stocks-card__property Марка
				.stocks-card__value=product.marka
		if product.standart and not current_menu.is_hide_standart
			.stocks-card__item
				.stocks-card__property ГОСТ
				.stocks-card__value=product.standart
		.stocks-card__wrap-item
			.stocks-card__item
				.stocks-card__property Цена
				if product.price
					.stocks-card__value.price #{product.price} ₽/шт
				else
					.stocks-card__value.price.hint
						| Договорная
						.hint__wrap
							+icon('hint')
			.stocks-card__item
				button.stocks-card__add-basket.btn.btn--circle(type='button')
					.stocks-card__add-basket-txt В заявку
					+icon('add-basket')
					+icon('add-basket-complited')