ul.catalog-m-menu.catalog-m-menu__sub
	li.catalog-m-menu__prev
		a
			span.catalog-m-menu__icon
				+icon('arrow-right-2')
			span=category_2.name
	each category_3 in category_2.get_child
		if category_3.get_child
			li.catalog-m-menu__item
				a
					span=category_3.name
					span.catalog-m-menu__icon
						+icon('arrow-right-2')
				ul.catalog-m-menu.catalog-m-menu__sub
					li.catalog-m-menu__prev
						a
							span.catalog-m-menu__icon
								+icon('arrow-right-2')
							span=category_3.name
					each category_4 in category_3.get_child
						if category_4.get_child
							li.catalog-m-menu__item
								a
									span=category_4.name
									span.catalog-m-menu__icon
										+icon('arrow-right-2')
								ul.catalog-m-menu.catalog-m-menu__sub
									li.catalog-m-menu__prev
										a
											span.catalog-m-menu__icon
												+icon('arrow-right-2')
											span=category_4.name
									each category_5 in category_4.get_child
										if category_5.get_child
											li.catalog-m-menu__item
												a
													span=category_5.name
													span.catalog-m-menu__icon
														+icon('arrow-right-2')
										else 
											li.catalog-m-menu__item
												a(href=category_5.url)=category_5.name
						else 
							li.catalog-m-menu__item
								a(href=category_4.url)=category_4.name
		else 
			li.catalog-m-menu__item
				a(href=category_3.url)=category_3.name