section.s-main-manufacturing
	.container-xxl
		.s-main-manufacturing__content
			.s-main-manufacturing__img
				img(src='../../../static/images/general/logo-manufacturing.svg', alt='Велунд')
			.s-main-manufacturing__header
				h2.txt--bld40 Производство
				a.link.link--w(href='/manufacture')
					span Все производство
					+icon('arrow-right-2')
			.row
				.offset-xl-3.offset-md-4.col-xl-9.col-md-8
					.s-main-manufacturing__slider
						.s-manufacturing-slider.swiper-container
							.swiper-wrapper
								each manufacture in manufacture_list
									.swiper-slide
										.s-manufacturing-slider__item
											include ../../modules/cards/manufacturing-card/manufacturing-card
						button.s-manufacturing-slider__prev.swiper-prev
							+icon('arrow-right-2')
						button.s-manufacturing-slider__next.swiper-next
							+icon('arrow-right-2')