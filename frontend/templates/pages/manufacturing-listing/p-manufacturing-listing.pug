section.p-manufacturing-listing#page(data-base-url=current_menu.url)
	.container-xxl
		h1.txt--bld40=current_menu.name
		.p-manufacturing-listing__callback.b-all-callback.b-all-callback--bg-dark
			.b-all-callback__content
