.product-content
	.product-content__content
		.product-content__slider
			.product-content__thumbs
				button.product-slider__prev
					+icon('arrow-up')
				button.product-slider__next
					+icon('arrow-up')
				.product-slider-thumbs.swiper-container
					.swiper-wrapper
						.swiper-slide
							.product-slider-thumbs__item
								.product-slider-thumbs__img
									img(src='#{media_url}#{product.image}' alt=product.name)
						.swiper-slide
							.product-slider-thumbs__item
								.product-slider-thumbs__img
									img(src='#{media_url}#{product.image_2}' alt=product.name)
